
<div id="layoutSidenav_content">
                <main>
                   
                    <div class="container-fluid">
                     
                         {{!-- <h1 class="mt-1">Vendors</h1> --}}
                          <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">Product</li>
                        </ol>

 <ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="/vendor/products">Products</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/vendor/addproduct">Add Product</a>
  </li>

</ul>
 
<div class="row" style="height:40px!important">
  {{#if CategorySuccessMsg_Caption}}

                  <div class="alert alert-success" style="width: 50%;">
                   <strong> {{CategorySuccessMsg_Caption}}</strong> {{CategorySuccessMsg}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
                   </div>
                   {{/if}}
 </div>
  <div class="row border border-info mt-3">
   <h3>Products</h3>
 <table class="table p-3" style="background-color:#e9ecef ;">
    
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                     <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
               {{#each products}}
                <tr>
                    <td>{{this.ProductName}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Price}}</td>
                     <td>{{this.Description}}</td>
                   <td>
                       <a  class="btn btn-primary" href="/admin/edit-category/{{this._id}}" >Edit</a>
                       <a class="btn btn-danger" href="/vendor/delete-product/{{this._id}}" onclick="return confirm('Are you sure you want to delete {{this.ProductName}}?')">Delete</a>
                    </td>
                </tr>
               {{/each}}
            </tbody>
        </table>
</div>

 
                    </div>
                </main>
        </div>

  