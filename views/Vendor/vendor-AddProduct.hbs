
<div id="layoutSidenav_content">
                <main>
                   
                    <div class="container-fluid">
                     
                         {{!-- <h1 class="mt-1">Vendors</h1> --}}
                          <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">Product</li>
                        </ol>

 <ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" href="/vendor/products">Products</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="/vendor/addproduct">Add Product</a>
  </li>

</ul>
 
<div class="row" style="height:40px!important">
  {{#if SuccessMsg}}

                  <div class="alert alert-success" style="width: 100%;">
                   <strong> {{SuccessMsg_Caption}}</strong> {{SuccessMsg}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
                   </div>
                   {{/if}}
 </div> 
 <div class="row">
     <div class="col-md-12">
          <form action="/vendor/addproduct"  enctype="multipart/form-data" method="POST" class="border border-info p-3 pb-0 mt-3" style="background-color:#e9ecef ;" >
      <h3>New Product</h3>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Name</label>
      <input type="text" class="form-control" name="ProductName" placeholder="Eg:Red Velvet">
    </div>
      <div class="form-group col-md-6">
      <label for="inputState">Category</label>
      
      <select name="Category" class="form-control">
         {{#each categories}}
         <option>{{this.CategoryName}}</option>  
         {{/each}}
        {{!-- <option selected>Choose...</option>
        <option>...</option> 
        value="{{this.CategoryCode}}"--}}
      </select>
    </div>
  </div>
 
  <div class="form-group">
    <label for="inputAddress">Description</label>
    <textarea class="form-control" name="Description" rows="2" placeholder="A light chocolate cake with lots of addictive cream cheese frosting and a crown of buttercream roses"></textarea>
    {{!-- <input type="text" class="form-control" name="Description" placeholder="Just Bake specializes in Designer Cakes, Wedding Cakes, photo cakes and Birthday Cakes and cakes of any shape you can think of..."> --}}
  </div>

<div class="form-row">
   <div class="form-group col-md-4">
<label for="">Image</label>
<input type="file" class="form-control" name="Image">
</div>
 <div class="form-group col-md-2">
      <label for="inputState">Price</label>
       <input type="text" class="form-control" name="Price">
     
    </div>
  
 
</div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form>
     </div>
 </div>
 

 
                    </div>
                </main>
        </div>

  