
<div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                         {{!-- <h1 class="mt-1">Vendors</h1> --}}
                          <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">Category</li>
                        </ol>
                       <ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="#">Category</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/admin/addCategory">Add Category</a>
  </li>

</ul>
<div class="row" style="height:40px!important">
  {{#if SuccessMsg}}

                  <div class="alert alert-success" style="width: 50%;">
                   <strong> {{SuccessMsg_Caption}}</strong> {{SuccessMsg}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
                   </div>
                   {{/if}}
                  </div>

<div class="row">
  <div class="col-md-6 border border-info mt-3">
   <h3>Categories</h3>
 <table class="table p-3" style="background-color:#e9ecef ;">
    
            <thead>
                <tr>
                    <th style="width: 10%;" >Name</th>
                    
                  <th>Action</th>
                  {{!-- <th scope="col">Code</th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{this.CategoryName}}</td>
                   
                   <td>
                       <a  class="btn btn-primary" href="/admin/edit-category/{{this._id}}" >Edit</a>
                       <a class="btn btn-danger" href="/admin/delete-category/{{this._id}}" onclick="return confirm('Are you sure you want to delete {{this.CategoryName}}?')">Delete</a>
                    </td>
                     {{!-- <td>{{this.CategoryCode}}</td> --}}
                </tr>
                {{/each}}
            </tbody>
        </table>
</div>
</div>
 
                    </div>
                </main>
