<script>
 
 function RemoveProduct(cartId,productId,userid)
 {
$.ajax({
    url : '/removeProduct',
    data : {
        cartID : cartId,
        proID : productId,
        user : userid
    },
    method : 'post',
    success:(Response)=>{
      if(Response.removeProduct)
      {
         location.reload()
         
      //alert("Product Removed From Cart")
     
      }
    }
    
   
})
 }

    function changeQuantity(cartId,productId,userid,qty,count)
    {
         // let QtySpan = $('#'+productId)
        count= parseInt(count)
       let quantity = parseInt(qty)
      
$.ajax({
    url : '/changeProductQuantity',
    data : {
        cartID : cartId,
        proID : productId,
        countValue : count,
        user : userid,
        quantity : quantity
    },
    method : 'post',
    success:QtyChanges(productId,quantity,count)
    
   
})

    }

    function QtyChanges()
    {
        
        //document.getElementById(productId).innerHTML=quantity + count spnNo_of_products
      //  document.getElementById('spnNo_of_products').innerHTML=quantity + count
        location.reload()
    }
</script>