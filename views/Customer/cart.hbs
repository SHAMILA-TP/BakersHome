<script>
 
function RemoveProduct(cartId,productId,userid)
 {
$.ajax({
    url : '/removeProduct',
    data : {
        cartID : cartId,
        proID : productId,
        user : userid
    },
    method : 'post',
    success:(Response)=>{
      if(Response.removeProduct)
      {
         location.reload()
         
      //alert("Product Removed From Cart")
     
      }
    }
    
   
})
 }

function changeQuantity(cartId,productId,userid,qty,count,price)
    {
        // let QtySpan = $('#'+productId)
        count= parseInt(count)
     //  let quantity = parseInt(qty)
      let  quantity = parseInt(document.getElementById(productId).innerHTML)
    
$.ajax({
    url : '/changeProductQuantity',
    data : {
        cartID : cartId,
        proID : productId,
        countValue : count,
        user : userid,
        quantity : quantity
    },
    method : 'post',
    success:(Response,total)=>{
      if(Response.response.removeProduct)
      {
         location.reload()
         
      //alert("Product Removed From Cart")
     
      }
      else{
        if(Response){
          total = parseInt(Response.total)
QtyChanges(productId,quantity,count,price,total)
        }
      }
    }
    
    
   
})

    }

function QtyChanges(productId,quantity,count,price,total)
    {
     let newQty=null
     quantity = parseInt(document.getElementById(productId).innerHTML)
     newQty=parseInt(quantity)  + parseInt(count)
   
      //  alert("Qty :"+quantity+" count : "+count+" productId"+productId)
        document.getElementById(productId).innerHTML= newQty
         document.getElementById("qty"+productId).innerHTML=newQty//quantity + count //spnNo_of_products
        document.getElementById("itemTotal"+productId).innerHTML="Rs."+  parseInt(newQty)* parseInt(price)

        document.getElementById('spnTotal').innerText="Rs."+total

      //  document.getElementById('spnNo_of_products').innerHTML=quantity + count
      //  location.reload()
    }
</script>